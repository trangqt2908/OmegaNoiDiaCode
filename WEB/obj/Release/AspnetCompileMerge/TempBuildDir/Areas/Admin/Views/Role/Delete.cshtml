@model AccountModels.WebRole
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@using (Html.BeginForm("Delete", "Role",  FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{   
    <div class="alert alert-info"> 
		@Html.Raw(Resources.Common.DeleteSureItem):  <strong>@Html.DisplayFor(m => m.RoleName )</strong> (@Html.DisplayFor(m => m.Description )) ?
	</div>
 
    <div class="validation-group"> 
        @Html.ValidationSummary(true) 
    </div>

    <div style="text-align:center;">
        <button class="btn btn-primary" type="submit">@Resources.Common.Delete</button> 
    </div>
    @Html.HiddenFor(m => m.RoleName )
    @Html.HiddenFor(m => m.RoleId )
    @Html.HiddenFor(m => m.Description )
    @Html.AntiForgeryToken()
}
<script type="text/javascript">
    function delete_success() {
        top.$("#window").data("kendoWindow").close();
        top.$("#grid").data("kendoGrid").dataSource.read();
    }
</script>
