@model WebModels.WebContent
 

@using (Html.BeginForm("Delete", "Photo", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{   
    <div class="alert alert-info"> 
		@Html.Raw(Resources.Common.DeleteSureItem):  <strong>@Html.DisplayFor(m => m.Title )</strong>  ?
	</div>
   <div style="text-align:center;">
       <img src="@Model.Image" style="max-width:350px; max-height:220px;" />
   </div>
    <div class="validation-group"> 
        @Html.ValidationSummary(true) 
    </div>

    <div style="text-align:center;">
        <button class="btn btn-primary" type="submit">@Resources.Common.Delete</button> 
    </div>
    @Html.HiddenFor(m => m.Title )
    @Html.HiddenFor(m => m.ID )
    @Html.HiddenFor(m => m.Image )
    @Html.AntiForgeryToken()
}
<script type="text/javascript">
    function delete_success() {
        top.$("#window").data("kendoWindow").close();
        top.$("#listView").data("kendoListView").dataSource.read();
    }
</script>
