@model IEnumerable<WebModels.WebContent>
@{  
    ViewBag.Title = "_OtherDestination";
    Layout = "";
}


<h6 class="black semibold text-center mx-4 mt-3 mb-3 info-title">@Resources.Common.OtherPlaces</h6>
<div class="text-center px-3 px-lg-2 pb-3">
    @foreach (var item in Model)
    {
        var url = Url.Action("Detail", "Home", new
        {
            metatitle = item.MetaTitle != null ? item.MetaTitle : "web",
            id = item.ID,
            m_metatitle = item.WebModule.MetaTitle != null ? item.WebModule.MetaTitle : "web",
            m_id = item.WebModule.ID,
            area = ""
        });
        <a class="btn btn-outline-primary px-3  mr-1 mb-1 btn-sm " href="@url" title="@item.Title" role="button">@item.Title</a>
    }

</div>