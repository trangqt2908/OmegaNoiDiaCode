@{
    Layout = "";
}


<div class="form-container py-3">
    <h4 class="black bold mt-3 px-4 pb-2 text-center">Search tour</h4>
    <form id="sidebar-form" class="px-xl-5 px-lg-3 px-4" action="@Url.Action("Search", "Home", new { area = "" })">

        <div class="form-group row">
            <div class="col-sm-12">
                <div class="input-group">
                    <select class="form-control">
                        <option value="0">  --  @Resources.Common.HowManyDays --</option>
                        <option value="1"> @Resources.Common.From01Day </option>
                        <option value="5"> @Resources.Common.From02To05Day</option>
                        <option value="10"> @Resources.Common.From06To10Day</option>
                        <option value="11"> @Resources.Common.Over11Day </option>
                    </select>
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fa fa-chevron-down"></i></div>
                    </div>
                </div>

            </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <div class="input-group">
                    @Html.DropDownList("country", new SelectList(ViewBag.CountryList, "ID", "Title"), "-- " + Resources.Common.WhereToGo + " --", new { @class = "form-control" })
                    <select id="ddlCity" name="city" style="display:none;"></select>
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fa fa-chevron-down"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <div class="input-group">
                    @Html.DropDownList("type", new SelectList(ViewBag.TypeOfTour, "ID", "Title"), "-- " + Resources.Common.TravelStyle + " --", new { @class = "form-control" })
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fa fa-chevron-down"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn col-sm-12 my-2 btn-primary">@Resources.Common.Search</button>

            </div>
        </div>
    </form>



</div>