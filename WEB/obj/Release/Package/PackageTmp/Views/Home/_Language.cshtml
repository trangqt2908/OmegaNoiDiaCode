@model IList<Language>
@{
    Layout = null;
}

<ul>
    @foreach (Language language in Model)
    {
        string img = language.ID + ".png";

        <li>
            <div class="img">
                <a href="/base/changelanguage/@language.ID">
                    <img src="/images/flags/@img" title="@language.Title" alt="@img" />
                </a>
            </div>
            <h4><a href="/base/changelanguage/@language.ID" title="@language.Title">@language.Title</a></h4>
        </li>

    }
</ul>



