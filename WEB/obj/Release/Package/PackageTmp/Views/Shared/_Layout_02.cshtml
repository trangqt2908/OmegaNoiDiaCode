<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="Shortcut Icon" href="/favicon.ico" type="image/x-icon" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />

    <title>
        @TempData["Title"]
    </title>
    <meta name="description" content="@TempData["Description"]" />
    <meta name="keywords" content="@TempData["Keywords"]" />

    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Bootstrap and Jquery scripts -->
    @*<script src="~/Content/themes/web/js/jquery-3.1.1.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/themes/web/js/bootstrap.min.js"></script>
    <script src="~/Content/themes/web/js/popper.min.js"></script>

    <!-- Aditional scripts -->
    <script src="~/Content/themes/web/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/themes/web/js/smooth-scroll.min.js"></script>
    <script src="~/Content/themes/web/js/jquery-ui.js"></script>
    <script src="~/Content/themes/web/js/initslider.js"></script>
    <script src="~/Content/themes/web/js/instafeed.min.js"></script>
    <script src="~/Content/themes/web/js/jquery.ui.touch-punch.min.js"></script>


    <!-- Main scripts -->
    <script src="~/Content/themes/web/js/main.js"></script>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/Content/themes/web/css/all.css">
    <link rel="stylesheet" href="~/Content/themes/web/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/themes/web/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/themes/web/fonts/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/themes/web/css/font-awesome-animation.min.css">
    <link rel="stylesheet" href="~/Content/themes/web/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/themes/web/css/style.css" type="text/css">
    <link href="~/Content/paging.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)

</head>
<body class="jquerytouch">

    @Html.Action("_Main", "Navigation", new { key = "main", area = "" })
    @RenderBody()
    @Html.Action("_Menu_Footer", "Navigation", new { area = "", key = "footer" })

</body>
</html>