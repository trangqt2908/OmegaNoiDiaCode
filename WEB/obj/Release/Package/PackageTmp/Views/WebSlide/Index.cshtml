@model IEnumerable<WebSlide>
<div id="slideshow">
    <div class="screen">
        @{
            var index = 1;
            var id = string.Empty;
        }
        @foreach (var item in Model)
        {
            id = "slide_" + index;
            <div class="slide" id="@id">
                <a href="@item.Link">
                    <div class="screen_mask"></div>
                    <div class="large_image"><img src="@item.Image" alt="@item.Title" /></div>
                </a>
                <div class="info">
                    <h4><a href="@item.Link">@item.Title</a></h4>
                </div>
                <div class="descript">
                    <div class="des-content">
                        <h3 style="font-weight: bold; color: red;">@item.Title</h3>
                        @item.Description
                        <div style="margin-top:10px">
                            <a href="@item.Link" class="btnSend"> @Resources.Common.Readmore </a>
                        </div>
                    </div>
                </div>
            </div>
            index++;
        }
    </div>
    <ul class="thumbnails">
        @foreach (var item in Model)
        {
            id = "slide_" + index;
            <li class="@id">
                <div class="thumb">
                    <img src="@item.Image" alt="@item.Title" />
                </div>
                <h4 class="h4">@item.Title</h4>
            </li>
            index++;
        }
    </ul>
</div>
<div class="clear"></div>
