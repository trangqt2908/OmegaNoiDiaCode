@model WebModels.WebContact

@using (Html.BeginForm("Edit", "Contact", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal fix" }))
{  
  


    <div class="control-group">
        @Html.LabelFor(m => m.Title, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Title, new { @class = "input-block-level" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
    </div>  
    
    <div class="control-group">
        @Html.LabelFor(m => m.FullName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.FullName, new { @class = "input-block-level" })
        </div>
    </div>  
    <div class="control-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Email, new { @class = "input-block-level" })
        </div>
    </div>  
    <div class="control-group">
        @Html.LabelFor(m => m.Mobile, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Mobile, new { @class = "input-block-level" })
        </div>
    </div>  
    <div class="control-group">
        @Html.LabelFor(m => m.Address, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Address, new { @class = "input-block-level" })
        </div>
    </div>  
    <div class="control-group">
        @Html.LabelFor(m => m.Company, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Company, new { @class = "input-block-level" })
        </div>
    </div> 
    <div class="row-fluid control-group">
        <div style="width: 99%;">
            <div class="box">
                <div class="box-title">
                    <h3><i class="icon-th"></i>@Html.DisplayNameFor(m => m.Body)</h3>
                </div>
                <div class="box-content nopadding">
                    @Html.TextAreaFor(m => m.Body, new { @class = "ckeditor ", @id = "ckeditor", @style = "height:550px;" })
                    <script type="text/javascript">
                        var editor = CKEDITOR.replace('ckeditor', {
                            customConfig: '/Content/ckeditor/basic.js',
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.Comment, new { @class = "control-label" })
        <div class="controls">
            @Html.TextAreaFor(m => m.Comment, new { @class = "input-block-level" })
        </div>
    </div>  
     
    <div class="validation-group">
        <div class="controls">
            @Html.ValidationSummary(true)
        </div>
    </div>

    <div class="form-actions">
        <button class="btn btn-primary" type="submit"><i class="icon-save"></i>@Resources.Common.SaveChanges</button>
    </div>
 @Html.AntiForgeryToken()
}
<script type="text/javascript">
    top.winsetup("@Html.Raw(Resources.Common.EditItem)", 900, 550, true);
    function edit_success() {
        top.$("#window").data("kendoWindow").close();
        top.$("#grid").data("kendoGrid").dataSource.read();
    }
</script>
