@model IEnumerable<ContentImage>
@if (Model.Count() > 0)
{
    var content = (WebContent)ViewBag.Content;
    <div class="big-slider">
        <h1 style="font-size:1.4em;text-align:center;">@content.Title</h1>
    </div>
    <div class="bxslidephoto">
        @foreach (var item in Model)
        {
            <div>
                <div class="img-hn">
                    <div class="badge"></div>
                    <img src="@String.Format("{0}", !string.IsNullOrEmpty(item.Image) ? item.Image : ApplicationService.NoImage)" alt="@content.Title" />
                </div>
                <div class="uk-clearfix"></div>
            </div>
        }
    </div>
}

