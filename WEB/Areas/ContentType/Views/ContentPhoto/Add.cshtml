                                        filebrowserFlashBrowseUrl: '/admin/upload/flash?uid=@ViewBag.UID',
                                        filebrowserFlashUploadUrl: '/admin/upload/flashck?uid=@ViewBag.UID',
                                        height: '400px'
                                    });
                                </script>
                            </div>
