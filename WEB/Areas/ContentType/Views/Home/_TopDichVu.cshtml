@model IEnumerable<WebModels.WebContent>
@{ }
<section class="blog-section over-layer-white pt-30 pb-40">
    <div class="container">
        <div class="row">
            <div class="section-title">
                <h2> <span>Dịch vụ </span> Tour </h2>
                <p>
                    Omegatours cung cấp các dịch vụ về lữ hành, vận chuyển, lưu trú,
                    ăn uống, vui chơi giải trí, thông tin, hướng dẫn và những dịch vụ khác nhằm đáp ứng 
                    nhu cầu của khách hàng.
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                var img = string.IsNullOrEmpty(item.Image) ? ApplicationService.NoImage : item.Image;

                var webmodule = item.WebModule;
                var url = Url.Action("Detail", "Home", new
                {
                    metatitle = item.MetaTitle != null ? item.MetaTitle : "web",
                    m_metatitle = webmodule.MetaTitle != null ? webmodule.MetaTitle : "web",
                    area = ""
                });
<div class="col-md-6 col-lg-4">
    <div class="blog-post">
        <div class="thumb">
            <img src="@img" alt="@item.Title" title="@item.Title">
            <div class="content">
                <a href="@url" title=" @item.Title">
                    <h3>
                        @Html.RawSubString(item.Title, 50)
                    </h3>
                    <div class="meta-box">
                        <div class="admin-post"> ADMIN </div>
                        <div class="inner">
                            <div class="date">
                                <i class="fa fa-calendar-plus-o"></i> @item.CreatedDate.Value.Day @item.CreatedDate.Value.ToString("MMM")
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <a href="@url" class="read-btn" title="@item.Title">
            Xem thêm
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </a>
    </div>
</div>            }
        </div>
    </div>
</section>
